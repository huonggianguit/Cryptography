<Window x:Class="Finance_Pro.Login.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finance_Pro.Login"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"      
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Width="800"
        Height="550"
        x:Name="Login"
        MouseDown="Login_MouseDown">
    <Window.Resources>
        <Style x:Key="TBlk" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Montserrat"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Opacity" Value="0.3"/>
            <Setter Property="Margin" Value="0,30,0,0"/>
            <Setter Property="Foreground" Value="#a3a3a4"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}, Path=Children[1].Text}" Value="">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard SpeedRatio="10">
                                <DoubleAnimation Storyboard.TargetProperty="FontSize" To="15"/>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0.3"/>
                                <ThicknessAnimation Storyboard.TargetProperty="Margin" To="0,30,0,0"/>
                                <ColorAnimation Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)" To="#a3a3a4" Duration="0:0:1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>

                    <DataTrigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard SpeedRatio="15">
                                <DoubleAnimation Storyboard.TargetProperty="FontSize" To="18"/>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1"/>
                                <ThicknessAnimation Storyboard.TargetProperty="Margin" To="0,0,0,0"/>
                                <ColorAnimation Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)" To="Red" Duration="0:0:1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.ExitActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="TxT" TargetType="TextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Montserrat"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="DarkGray"/>
            <!--Màu Con trỏ văn bản-->
            <Setter Property="BorderBrush" Value="DarkGray"/>
            <!--Màu Viền khung chứa-->
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="Padding" Value="0,0,0,0"/>
        </Style>
        <Style x:Key="BorderText" TargetType="Border">
            <Setter Property="BorderBrush" Value="DarkGray"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="Aqua"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="False">
                    <Setter Property="BorderBrush" Value="DarkGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>
    <Grid >
        <Border CornerRadius="12">
            <Border.Background>
                <ImageBrush ImageSource="/assets/BackGroundLogin.jpg"
                 Stretch="None"/>
            </Border.Background>
            <Border 
             CornerRadius="10"
             BorderThickness="2"
             Opacity="0.8">
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#462AD8" Offset="0"/>
                        <GradientStop Color="#DA34AE" Offset="0.75"/>
                        <GradientStop Color="#8A16C1" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                        <GradientStop Color="#060531" Offset="0"/>
                        <GradientStop Color="#1B1448" Offset="0.75"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="5"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock
                         Grid.Column="0"
                         Text="LOG IN"
                         FontSize="22"
                         FontFamily="Montserrat"
                         FontWeight="Bold"
                         Foreground="DarkGray"
                         VerticalAlignment="Center"
                         Margin="10,0,0,0"/>
                        <Button 
                         x:Name="btnMinimize"
                         Grid.Column="1"
                         Height="25"
                         Width="25"
                         Cursor="Hand"
                         Style="{StaticResource IconButtonStyle}"
                         Content="{StaticResource Up}"
                         Click="btnMinimize_Click"/>
                        <Button 
                         x:Name="btnClose"
                         Grid.Column="2"
                         Height="25"
                         Width="25"
                         Cursor="Hand"
                         Style="{StaticResource IconButtonStyle}"
                         Content="{StaticResource CloseIcon}"
                         Click="btnClose_Click"/>
                    </Grid >
                    <StackPanel  
                     Grid.Row="1"
                     Orientation="Vertical"                        
                     Width="300">
                        <Image 
                         Source="/assets/Logo.png"
                         Width="100"/>
                        <TextBlock 
                         Text="Finance Pro"
                         FontFamily="Montserrat"
                         FontWeight="Medium"
                         FontSize="25"
                         Foreground="White"
                         HorizontalAlignment="Center"/>
                        <TextBlock 
                         Text="Program use to design your finance! It's nice to see you again."
                         FontFamily="Montserrat"
                         FontStyle="Italic"
                         Foreground="Gray"
                         FontWeight="ExtraLight"
                         FontSize="15"
                         TextWrapping="Wrap"
                         TextAlignment="Center"
                         Margin="0,5,0,0"/>
                        <Grid  Height="55" Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="30" />
                            </Grid.ColumnDefinitions>
                            <Image 
                             Grid.Column="0"
                             Source="/assets/UserIcon.png"
                             Width="30"
                             VerticalAlignment="Bottom"
                             HorizontalAlignment="Left"/>

                            <Border 
                             Grid.Column="1"
                             Style="{StaticResource BorderText}">
                                <Grid>
                                    <TextBlock
                                     Grid.Column="1"
                                     x:Name="txtBeforeUsername"
                                     Text="UserName"
                                     Style="{StaticResource TBlk}"/>
                                    <TextBox
                                     Grid.Column="1"
                                     x:Name="userName"
                                     Background="Transparent"
                                     Style="{StaticResource TxT}">
                                    </TextBox>
                                </Grid>
                            </Border>
                        </Grid>
                        <Grid Height="55" Margin="0,30,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="30" />
                            </Grid.ColumnDefinitions>
                            <Image 
                             Grid.Column="0"
                             Source="/assets/PassIcon.png"
                             Width="30"
                             VerticalAlignment="Bottom"
                             HorizontalAlignment="Left"/>
                            <Border 
                             Grid.Column="1"
                             Style="{StaticResource BorderText}">
                                <Grid>
                                    <TextBlock 
                                     x:Name="txtBeforePass" 
                                     Text="Password"
                                     Style="{StaticResource TBlk}"/>
                                    <TextBox 
                                     x:Name="txtPass"
                                     Style="{StaticResource TxT}"
                                     Background="Transparent"
                                     Visibility="Collapsed"
                                     TextChanged="txtPass_TextChanged">
                                    </TextBox>
                                    <PasswordBox 
                                     x:Name="passWord"                                   
                                     Height="30"
                                     FontSize="20"
                                     VerticalAlignment="Bottom"
                                     Padding="0,0,0,0"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     PasswordChanged="passWord_PasswordChanged">
                                    </PasswordBox>
                                </Grid>
                            </Border>
                            <Button 
                             x:Name="btnShowPass"
                             Grid.Column="2"
                             Width="30"
                             Margin="0,20,0,0"
                             Style="{StaticResource IconButtonStyle}"
                             Content="{StaticResource eyeSlashedIcon}"
                             Click="btnShowPass_Click">
                            </Button>
                        </Grid>
                        <Grid 
                         Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <local:ToggleLoginButton 
                                Grid.Column="0"
                             Grid.Row="0"
                             x:Name="toogleBut"/>
                            <TextBlock x:Name="txtForgetPass"
                                    Text="ForgetPassword?"
                                    Grid.Column="1"
                                    Grid.Row="0"
                                    FontFamily="Montserrat"
                                    Foreground="Aqua"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Height="15"
                                    Margin="0,0,25,0"
                                    >
                            </TextBlock>
                            <Button x:Name="btnRegister"
                                    Content="Register."
                                    Grid.Column="1"
                                    Grid.Row="1"
                                    FontFamily="Montserrat"
                                    FontSize="15"
                                    FontWeight="Normal"
                                    Foreground="Aqua"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Padding="2,0"
                                    MinHeight="20"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Margin="0,0,25,0"
                                    Click="btnRegister_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="Transparent"
                                                CornerRadius="4">       
                                            <ContentPresenter HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#22FFFFFF"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#33FFFFFF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <TextBlock Text="Rememberme?"
                                    Grid.Column="0"
                                    Grid.Row="1"
                                    FontFamily="Montserrat"
                                    FontWeight="Bold"
                                    FontSize="15"
                                    Foreground="Gray"
                                    Margin="10,0,0,0"/>
                        </Grid>
                        <Button
                            x:Name="btnLogin" 
                            Content="LOGIN"
                            Height="60"
                            Margin="70,20,70,0"
                            Foreground="Aqua"
                            FontWeight="Bold"                     
                            Cursor="Hand"
                            Click="btnLogin_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border                
                                     BorderThickness="5"
                                     CornerRadius="15">
                                        <!-- Sử dụng LinearGradientBrush cho Border.Background -->
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0.75,0" EndPoint="0,1">
                                                <GradientStop Color="#254BBE" Offset="0.1"/>
                                                <GradientStop Color="#25A6BE" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <!-- ContentPresenter để hiển thị nội dung của Button -->
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

    </Grid>
</Window>
